SELECT *, (3959 * acos(cos(radians(33.9324436)) * cos(radians(startingLatitude)) * cos(radians(startingLongitude) - radians(-83.3482846) + sin(radians(33.9324436)) * sin(radians(startingLatitude))))) AS distance FROM trips HAVING distance < 10 ORDER BY distance LIMIT 0 , 20

"SELECT id, ( 3959 * acos( cos( radians( " . $locationLatitude . " ) ) * cos( radians( startingLatitude ) ) * cos( radians( startingLongitude ) - radians( " . $locationLongitude . " ) ) + sin( radians( " . $locationLatitude . " ) ) * sin( radians( startingLatitude ) ) ) ) AS distance FROM trips HAVING distance < 10 ORDER BY distance LIMIT 0 , 20;"


